# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/cardless_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Token Configuration (for tokenized cash withdrawal system)
# Token expiry time in seconds (minimum 60, maximum 86400 = 24 hours)
TOKEN_EXPIRY_SECONDS=3600

# CORS Configuration
# Comma-separated list of allowed origins, or * for all
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Configuration
# JWT Secret (for future auth endpoints)
JWT_SECRET=super_secret_jwt_key_that_should_be_long_and_random

# Token System Configuration (for tokenized cash withdrawal system)
# Token expiry time in seconds (minimum 60, maximum 86400 = 24 hours)
TOKEN_EXPIRY_SECONDS=300
TOKEN_PEPPER=secure_pepper_value_at_least_16_chars_long

# Migration Configuration
# Set to true to run migrations automatically on startup (not recommended for production)
RUN_MIGRATIONS_ON_STARTUP=false
